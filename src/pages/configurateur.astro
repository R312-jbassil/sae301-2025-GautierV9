    try {
      await pb.collection('lunettes').create({
        Utilisateur: currentUserId,
        Modele: "basique",
        SVG: svgCode,
        largeur_pont: largeurPont,
        taille_verre: tailleVerre,
        Materiaux_Monture: materiauMonture,
        Materiaux_Branches: materiauBranche
