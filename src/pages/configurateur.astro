const couleursMateriau = {
  'Ac√©tate': '#A7E3EA',
  'M√©tal': '#767C87',
  'Fibre de carbone': '#3B3B3B',
  'Bois': '#BD8B5D'
};

let materiauMonture = null;
let materiauBranche = null;
let largeurPont = null;
let tailleVerre = null;

// Fonction: couleur DOM et SVG export
function changerCouleurClasse(classe, couleur) {
  // Cible <svg id="svg-lunette"> uniquement
  const svg = document.getElementById('svg-lunette');
  if (!svg) return;
  svg.querySelectorAll(`.${classe}`).forEach(el => {
    el.style.fill = couleur;
    el.setAttribute('fill', couleur);
  });
}

document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.btn-monture').forEach(btn => {
    btn.addEventListener('click', () => {
      materiauMonture = materiauIds[btn.textContent.trim()];
      changerCouleurClasse('cls-3', couleursMateriau[btn.textContent.trim()]);
      document.querySelectorAll('.btn-monture').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
    });
  });

  document.querySelectorAll('.btn-branche').forEach(btn => {
    btn.addEventListener('click', () => {
      materiauBranche = materiauIds[btn.textContent.trim()];
      changerCouleurClasse('cls-4', couleursMateriau[btn.textContent.trim()]);
      document.querySelectorAll('.btn-branche').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
    });
  });

  document.querySelectorAll('.btn-largeur').forEach(btn => {
    btn.addEventListener('click', () => {
      largeurPont = parseInt(btn.textContent);
      document.querySelectorAll('.btn-largeur').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
    });
  });

  document.querySelectorAll('.btn-verre').forEach(btn => {
    btn.addEventListener('click', () => {
      tailleVerre = parseInt(btn.textContent);
      document.querySelectorAll('.btn-verre').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
    });
  });

  document.getElementById("btn-save-glasses").addEventListener("click", async () => {
    const svgElement = document.getElementById('svg-lunette');
    // V√©rification existence
    if (!svgElement) {
      alert("SVG non trouv√© sur la page !");
      return;
    }
    const svgCode = svgElement.outerHTML;
    const currentUserId = pb.authStore.model?.id;

    if (!materiauMonture || !materiauBranche || !largeurPont || !tailleVerre) {
      alert('Merci de s√©lectionner tous les crit√®res üôè');
      return;
    }
    if (!currentUserId) {
      alert('Erreur: utilisateur non connect√©.');
      return;
